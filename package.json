{
  "name": "quote-cli",
  "version": "1.1.0",
  "description": "Get a random quote or the quote of the day in your CLI",
  "license": "MIT",
  "repository": "riyadhalnur/quote-cli",
  "author": {
    "name": "Riyadh Al Nur",
    "email": "riyadhalnur@verticalaxisbd.com",
    "url": "https://verticalaxisbd.com"
  },
  "bin": {
    "quote": "cli.js"
  },
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "test": "mocha -t 10000 tests/tests.js",
    "coverage": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec tests/tests.js -t 100000 && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "format": "prettier --single-quote --write \"*.js\" \"tests/*.js\"",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "files": [
    "index.js",
    "cli.js"
  ],
  "preferGlobal": true,
  "keywords": [
    "cli-app",
    "cli",
    "quote"
  ],
  "dependencies": {
    "axios": "0.18.0",
    "chalk": "^2.0.0",
    "lodash": "~4.17.3",
    "meow": "^5.0.0",
    "update-notifier": "^3.0.0"
  },
  "devDependencies": {
    "chai": "4.1.2",
    "chai-as-promised": "7.1.1",
    "coveralls": "3.0.0",
    "eslint": "4.19.1",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-prettier": "2.6.0",
    "husky": "0.14.3",
    "istanbul": "0.4.5",
    "lint-staged": "7.0.5",
    "mocha": "5.1.1",
    "mocha-lcov-reporter": "1.3.0",
    "prettier": "1.12.1"
  }
}
